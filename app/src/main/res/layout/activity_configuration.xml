    <TextView
        android:id="@+id/encIntervalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/configure_interval"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/encIntervalText"
        android:layout_width="129dp"
        android:layout_height="38dp"
        android:ems="10"
        android:inputType="number"
        android:textSize="14sp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/encIntervalLabel" />

    <TextView
        android:id="@+id/encUnitsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="@string/units_seconds"
        app:layout_constraintBaseline_toBaselineOf="@+id/encIntervalText"
        app:layout_constraintLeft_toRightOf="@+id/encIntervalText" />
